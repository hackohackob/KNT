extends layout

block head-style
  link(href='https://fonts.googleapis.com/css?family=Poiret+One|Comfortaa&subset=latin,cyrillic' rel='stylesheet' type='text/css')
  style
    | h1{font-size:10em; font-family: 'Comfortaa'; color:white; text-align:center;}
    |.main *{margin:0 auto; text-align:center;}
    |.content-box-white{background-color:white; padding:50px; min-height:500px;}
    |.content-box-white-title{color:#0f5586;}
    |#buffer{padding:1vw;}
block header
  div(id="buffer")
    img(id="logo" src="images/logow.png")
    div(class="uk-width-large-1-1 uk-visible-large")
      h1 Error 401
block content
  div(class="content-box-white")
      div(class="content-box-white-title") Unauthorized
      div(class="content-box-white-content")    
        h2  You are not authorized to view this part of the website!