extends layout
block head-style
	link(href='https://fonts.googleapis.com/css?family=Poiret+One|Comfortaa&subset=latin,cyrillic' rel='stylesheet' type='text/css')
	style
		| h1{font-size:10em; font-family: 'Comfortaa'; color:white; }
		|.st-pusher .st-content{ background: url("http://nstechnologies.co.in/images/Website-maintenance-by-Xynez-Global-Media.jpg") no-repeat center center fixed; }
		|.content-box-blue, .content-box-white {margin-top:0; border-bottom:5px solid black; padding:50px 0;}
		|.content-box-blue-title, .content-box-white-title {font-family:"Poiret One";  margin-bottom:20px; margin-bottom:7vw; font-size:20px; font-size:6vw; position:relative;}
		|.content-box-white{background-color:white; }
		|.content-box-white-title{ color:#0f5586;}
		|.content-box-white-line{min-height:2px; background-color:#0f5586; width:70%; float:left; margin-top:10px;}
block header
	div(id="buffer")
		img(id="logo" src="images/logow.png")
		div(id="heading")
			h1 Страници & Потребители
block content
	div(class="content-box-white")
		div(class="content-box-white-title") Добавяне
		div(class="content-box-white-line")
		div(class="content-box-white-content clear")
			ul(class="nav nav-tabs nav-justified" role="tablist")
				li(role="presentation" class="active")
					a(href="#" data-toggle="pill") Страница
				li(role="presentation")
					a(href="#" data-toggle="pill") Потребителgit
			form(action="/pages" method="post")
				span Id
				input(type=text name="id")
				span Name
				input(type=text name="name")
				button(type="symbit") Изпрати
block end-script